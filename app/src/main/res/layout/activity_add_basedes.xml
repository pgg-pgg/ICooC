<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rl_title"
        android:background="#1296db">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_left"
            android:id="@+id/iv_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="编辑基本信息"
            android:textSize="20dp"
            android:textColor="#fff" />
        <ImageView
            android:id="@+id/btn_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_sure"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edit_base_name"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/item_text"
            android:textSize="18sp"
            android:hint="姓名"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="5dp"
            android:background="#8000"/>

        <TextView
            android:id="@+id/text_base_sex"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:drawableLeft="@drawable/item_text"
            android:hint="性别"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="5dp"
            android:background="#8000"/>
        <TextView
            android:id="@+id/text_base_birth"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:drawableLeft="@drawable/item_text"
            android:hint="出生年月"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:background="#8000"/>
        <TextView
            android:id="@+id/text_base_grade"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:drawableLeft="@drawable/item_text"
            android:hint="年级"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="5dp"
            android:background="#8000"/>

        <EditText
            android:id="@+id/edit_base_num"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/item_text"
            android:textSize="18sp"
            android:hint="手机号"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="5dp"
            android:background="#8000"/>

        <EditText
            android:id="@+id/edit_base_email"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/item_text"
            android:textSize="18sp"
            android:hint="邮箱"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="5dp"
            android:background="#8000"/>


    </LinearLayout>


</LinearLayout>