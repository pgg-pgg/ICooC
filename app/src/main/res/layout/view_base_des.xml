<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/btn_selector"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_title"
        android:textColor="#666"
        android:textSize="@dimen/base_des"
        android:text="姓  名："/>
    <TextView
        android:id="@+id/tv_base_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="彭港归"
        android:textSize="@dimen/base_des"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/tv_name_title"/>

    <TextView
        android:id="@+id/tv_base_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#1296db"
        android:drawablePadding="5dp"
        android:textSize="20dp"
        android:text="编辑"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/edit_btn"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sex_title"
        android:layout_marginTop="10dp"
        android:textColor="#666"
        android:textSize="@dimen/base_des"
        android:layout_below="@id/tv_name_title"
        android:text="性  别："/>

    <TextView
        android:id="@+id/tv_school_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="男"
        android:textSize="@dimen/base_des"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/tv_name_title"
        android:layout_below="@id/tv_base_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hopejob_add"
        android:layout_marginTop="10dp"
        android:textColor="#666"
        android:textSize="@dimen/base_des"
        android:layout_below="@id/tv_sex_title"
        android:text="出生年月："/>

    <TextView
        android:id="@+id/tv_grade_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="1997-3-6"
        android:textSize="@dimen/base_des"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/tv_hopejob_add"
        android:layout_below="@id/tv_school_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_exp_des"
        android:layout_marginTop="10dp"
        android:textColor="#666"
        android:textSize="@dimen/base_des"
        android:layout_below="@id/tv_hopejob_add"
        android:text="当前学籍："/>

    <TextView
        android:id="@+id/tv_base_grade"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="大三"
        android:textSize="@dimen/base_des"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/tv_exp_des"
        android:layout_below="@id/tv_grade_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phone_title"
        android:layout_marginTop="10dp"
        android:textColor="#666"
        android:textSize="@dimen/base_des"
        android:layout_below="@id/tv_exp_des"
        android:text="联系方式："/>

    <TextView
        android:id="@+id/tv_base_phone"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="18829591066"
        android:textSize="@dimen/base_des"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/tv_phone_title"
        android:layout_below="@id/tv_base_grade"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_email_title"
        android:layout_marginTop="10dp"
        android:textColor="#666"
        android:textSize="@dimen/base_des"
        android:layout_below="@id/tv_phone_title"
        android:text="联系邮箱："/>

    <TextView
        android:id="@+id/tv_base_email"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="979150046@qq.com"
        android:textSize="@dimen/base_des"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_toRightOf="@id/tv_email_title"
        android:layout_below="@id/tv_base_phone"/>
</RelativeLayout>