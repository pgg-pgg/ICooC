<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/btn_selector"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hopejob_name"
        android:textColor="#000"
        android:textSize="@dimen/base_des"
        android:text="Android开发工程师"/>


    <TextView
        android:id="@+id/tv_hopejob_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#1296db"
        android:drawablePadding="5dp"
        android:textSize="20dp"
        android:text="编辑"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/edit_btn"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hopejob_des"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="@dimen/base_des"
        android:layout_below="@id/tv_hopejob_name"
        android:text="实习/西安/15k-20k"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hopejob_add"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="@dimen/base_des"
        android:layout_below="@id/tv_hopejob_des"
        android:text="Android开发测试"/>
</RelativeLayout>