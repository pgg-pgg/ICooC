<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.pgg.icookapp.view.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_default"
        android:id="@+id/iv_info_comp_icon"/>

    <TextView
        android:id="@+id/tv_info_comp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="北京百度网讯科技有限公司"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_info_comp_icon"/>

    <TextView
        android:id="@+id/tv_info_comp_financingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上市公司"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:textColor="#8000"
        android:layout_below="@id/tv_info_comp_name"
        android:layout_toRightOf="@id/iv_info_comp_icon"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/tv_info_comp_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000人以上"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:textColor="#8000"
        android:layout_below="@id/tv_info_comp_name"
        android:layout_toRightOf="@id/tv_info_comp_financingType"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_info_comp_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算机/互联网"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:textColor="#8000"
        android:layout_below="@id/tv_info_comp_name"
        android:layout_toRightOf="@id/tv_info_comp_scale"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_right"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>